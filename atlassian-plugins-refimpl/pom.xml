            </properties>
        </profile>
-->
        <profile>
            <id>jboss42</id>
            <properties>
                <cargo.container.id>jboss42x</cargo.container.id>

                <cargo.container.type>installed</cargo.container.type>
                <cargo.url>http://internode.dl.sourceforge.net/sourceforge/jboss/jboss-4.2.3.GA.zip</cargo.url>
