    <properties>
        <cargo.wait>false</cargo.wait>
        <cargo.servlet.port>8480</cargo.servlet.port>
        <cargo.rmi.port>18080</cargo.rmi.port>
        <sal.version>1.1-SNAPSHOT</sal.version>
        <pluginBundleDirectory>target/bundled-plugins</pluginBundleDirectory>
    </properties>


</project>
