<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_9" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>Atlassian Plugins Reference Implementation</display-name>

    <!-- this filter is used to rewrite through the /s/* filter to add caching headers. see: urlrewrite.xml -->
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>

    <filter>
        <filter-name>filter-plugin-dispatcher-top</filter-name>
        <filter-class>com.atlassian.plugin.refimpl.servlet.SimpleContainerFilter</filter-class>
        <init-param>
            <param-name>location</param-name>
            <param-value>top</param-value>
        </init-param>
    </filter>
    
    <filter>
        <filter-name>filter-plugin-dispatcher-middle</filter-name>
        <filter-class>com.atlassian.plugin.refimpl.servlet.SimpleContainerFilter</filter-class>
        <init-param>
            <param-name>location</param-name>
            <param-value>middle</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>filter-plugin-dispatcher-bottom</filter-name>
        <filter-class>com.atlassian.plugin.refimpl.servlet.SimpleContainerFilter</filter-class>
        <init-param>
            <param-name>location</param-name>
            <param-value>bottom</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>filter-plugin-dispatcher-top</filter-name>
        <url-pattern>/*</url-pattern>    
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/s/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter-plugin-dispatcher-middle</filter-name>
        <url-pattern>/*</url-pattern>    
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter-plugin-dispatcher-bottom</filter-name>
        <url-pattern>/*</url-pattern>    
    </filter-mapping>

    <servlet>
        <servlet-name>plugins</servlet-name>
        <servlet-class>com.atlassian.plugin.refimpl.servlet.SimpleContainerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>file-server</servlet-name>
        <servlet-class>com.atlassian.plugin.refimpl.servlet.FileServerServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>file-server</servlet-name>
        <url-pattern>/download/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>plugins</servlet-name>
        <url-pattern>/plugins/servlet/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.atlassian.plugin.refimpl.InitListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
